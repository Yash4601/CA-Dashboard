<%- include('partials/header') %>
<link rel="stylesheet" href="css/styles.css">
</head>


<body>

  <main>
    <div class="container-fluid" style="background: #2b3844">
      <div class="row">
        <div class="login-section-wrapper">
          <div class="brand-wrapper">
            <img src="images/inmovidulogo.png" alt="logo" class="logo">
          </div>
          <div class="login-wrapper justify-content-center my-auto mx-auto">
            <div class="align-items-center justify-content-around mb-4">
              <div class="d-flex m-b-10 p-x-3 align-items-center">
                <h6 class="my-auto">Sign in with</h6>
                <div class="google text-center mr-3">
                  <div class=""><img src="https://img.icons8.com/fluent/48/000000/google-logo.png" style="width: 22px; height: 22px;"/></div>
                </div>
                <div class="facebook text-center mr-3">
                  <div class="fab fa-facebook-f"></div>
                </div>
                <div class="linkedin text-center mr-3">
                  <div class="fab fa-linkedin"></div>
                </div>
              </div>
              <div class="d-flex px-3 my-4">
                <div class="line"></div> <small class="or text-center">Or</small>
                <div class="line"></div>
              </div>
            </div>

            <form class="login-form validate-form m-t-10" action="/login" method="POST">
              <span class="login-form-title">
                Please sign in to gain access
              </span>
              <div class="form-group rs1-wrap-input wrap-input validate-input">
                <input type="email" name="email" id="email" class="input" placeholder="Email">
                <span class="focus-input"></span>
              </div>
              <div class="form-group rs2-wrap-input wrap-input validate-input m-b-30">
                <input type="password" name="password" id="password" class="input" placeholder="Password">
                <span class="focus-input"></span>
              </div>
              <div class="container-login-form-btn ">
                <button class="login-form-btn" type="submit" name="button">Sign In</button>
              </div>
              <div class="w-full text-center p-t-27 p-b-30">
                <span class="txt1">
                  Forgot
                </span>
                <a href="/forgot_password" class="txt2">
                  Password?
                </a>
              </div>
              <div class="w-full text-center" style="color = #f8f9fa;">
                Don't have an account? <a class="txt2" href="/register">Create One</a>
              </div>
            </form>
          </div>
        </div>
        <div class="login-more" style="background-image: url('images/page-404.jpg');"></div>
        <!-- <div class="col-sm-6 px-0 d-none d-sm-block">
          <img src="assets/images/page-404.jpg" alt="login image" class="login-img">
        </div> -->
      </div>
    </div>
  </main>



  <%- include('partials/footer') %>
