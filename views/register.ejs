<%- include('partials/header') %>

<link rel="stylesheet" href="css/register.css">
</head>

<body>

  <main>
    <div class="container-fluid" style="background: #2b3844">
      <div class="row">
        <div class="login-section-wrapper">
          <div class="brand-wrapper">
            <img src="images/inmovidulogo.png" alt="logo" class="logo">
          </div>
          <div class="login-wrapper justify-content-center my-auto mx-auto">
            <div class="align-items-center justify-content-around">
              <div class="d-flex m-b-10 p-x-3 align-items-center">
                <h6 class="my-auto">Register with</h6>
                <div class="google text-center mr-3">
                  <div class=""><img src="https://img.icons8.com/fluent/48/000000/google-logo.png" style="width: 22px; height: 22px;"/></div>
                </div>
                <div class="facebook text-center mr-3">
                  <div class="fab fa-facebook-f"></div>
                </div>
                <div class="linkedin text-center mr-3">
                  <div class="fab fa-linkedin"></div>
                </div>
              </div>
              <div class="d-flex px-3 my-4">
                <div class="line"></div> <small class="or text-center">Or</small>
                <div class="line"></div>
              </div>
            </div>

            <form class="login-form validate-form" action="/register" method="post">
              <span class="login-form-title">
                Register here
              </span>
              <div class="wrap-input form-group rs1-wrap-input validate-input" data-validate="Type first name">
                <input id="fname" class="input" type="text" name="name" placeholder="Name" autofocus>
                <span class="focus-input"></span>
              </div>
              <!-- <div class="wrap-input form-group rs2-wrap-input validate-input" data-validate="Type last name">
                <input id="lname" class="input" type="text" name="lname" placeholder="Last Name" autofocus>
                <span class="focus-input"></span>
              </div> -->
              <div class="wrap-input form-group rs3-wrap-input validate-input" data-validate="Type email">
                <input id="email" class="input" type="email" name="email" placeholder="Email">
                <span class="focus-input"></span>
              </div>
              <div class="wrap-input form-group rs4-wrap-input validate-input" data-validate="Type password">
                <input class="input" type="password" name="password" placeholder="Password">
                <span class="focus-input"></span>
              </div>
              <div class="wrap-input form-group rs5-wrap-input validate-input" data-validate="Type password">
                <input class="input" type="password" name="confirmpassword" placeholder="Confirm Password">
                <span class="focus-input"></span>
              </div>
              <div class="container-login-form-btn">
                <button class="login-form-btn" type="submit" name="button">Register</button>
              </div>
              <div class="w-full text-center register m-t-10" style="color = #f8f9fa;">
                Already have an account? <a class="txt2" href="/login">Login</a>
              </div>
            </form>
          </div>
        </div>
        <div class="login-more" style="background-image: url('images/page-404.jpg');"></div>
        <!-- <div class="col-sm-6 px-0 d-none d-sm-block">
          <img src="assets/images/page-404.jpg" alt="login image" class="login-img">
        </div> -->
      </div>
    </div>
  </main>

<%- include('partials/footer') %>
